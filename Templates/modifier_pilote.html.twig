{# filepath: templates/modifier_pilote.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Modifier pilote</title>
        <link rel="stylesheet" href="src/ajouter-entreprise.css">
        <link rel="stylesheet" href="src/header-footer.css">
    </head>
    <body>
        {# Inclure le header réutilisable #}
        {% include 'partials/header.html.twig' %}
        <main>
        <h2>Modifier un pilote</h2>
        <form class="formulaire-ajout" method="POST" action="/gestion_pilote.php">
            <div class="form-grid">
                <div class="form-group">
                    <label for="prenom">Prénom du pilote : {{ pilote.prenom }}</label>
                    <input type="text" id="prenom" name="prenom" placeholder="Prénom du pilote" required>
                </div>
                <div class="form-group">
                    <label for="nom">Nom du pilote : {{ pilote.nom }}</label>
                    <input type="text" id="nom" name="nom" placeholder="Nom du pilote" required>
                </div>
                <div class="form-group">
                    <label for="email">Email : {{ pilote.email }}</label>
                    <input type="email" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="motdepasse">Mot de passe</label>
                    <input type="text" id="motdepasse" name="motdepasse" placeholder="Mot de passe" required>
                </div>
                <div class="form-group">
                    <label for="telephone">Téléphone : {{pilote.telephone}}</label>
                    <input type="text" id="telephone" name="telephone" placeholder="Téléphone" required>
                </div>
                <div class="form-group">
                    <label for="datenaissance">Date naissance : {{pilote.datenaissance}}</label>
                    <input type="date" id="datenaissance" name="datenaissance" placeholder="Date de naissance" required>
                </div>
                <div class="form-group">
                    <label for="promotion">Promotion : {{ pilote.promotion }}</label>
                    <input type="text" id="promotion" name="promotion" placeholder="Promotion" required>
                </div>
            </div>
            <button type="submit" class="bouton-ajouter">Modifier le pilote</button>
        </form>
        <form method="POST" action="/gestion_pilote.php" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce pilote ?');">
            <input type="hidden" name="pilote_id" value="{{ pilote.id }}">
            <button type="submit" class="bouton-supprimer">Supprimer le pilote</button>
        </form>
        </main>
        {# Inclure le footer réutilisable #}
        {% include 'partials/footer.html.twig' %}
    </body>
</html>