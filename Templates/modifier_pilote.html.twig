{# filepath: templates/modifier_pilote.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Modifier pilote</title>
        <link rel="stylesheet" href="src/ajouter-entreprise.css">
        <link rel="stylesheet" href="src/header-footer.css">
    </head>
    <body>
        {# Inclure le header réutilisable #}
        {% include 'partials/header.html.twig' %}
        <main>
            <h2>Modifier un pilote</h2>
            
            {# Formulaire pour modifier le pilote #}
            <form class="formulaire-ajout" method="POST" action="/modifier_pilote.php?id={{ pilote.id_user }}">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="prenom">Prénom du pilote :</label>
                        <input type="text" id="prenom" name="prenom" value="{{ pilote.prenom }}" placeholder="Prénom du pilote">
                    </div>
                    <div class="form-group">
                        <label for="nom">Nom du pilote :</label>
                        <input type="text" id="nom" name="nom" value="{{ pilote.nom }}" placeholder="Nom du pilote">
                    </div>
                    <div class="form-group">
                        <label for="email">Email :</label>
                        <input type="email" id="email" name="email" value="{{ pilote.email }}" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="motdepasse">Mot de passe :</label>
                        <input type="text" id="motdepasse" name="motdepasse" placeholder="Mot de passe">
                    </div>
                    <div class="form-group">
                        <label for="telephone">Téléphone :</label>
                        <input type="text" id="telephone" name="telephone" value="{{ pilote.telephone }}" placeholder="Téléphone">
                    </div>
                    <div class="form-group">
                        <label for="datenaissance">Date de naissance :</label>
                        <input type="date" id="datenaissance" name="datenaissance" value="{{ pilote.datenaissance }}" placeholder="Date de naissance">
                    </div>
                    <div class="form-group">
                        <label for="promotion">Promotion :</label>
                        <input type="text" id="promotion" name="promotion" value="{{ pilote.promotion }}" placeholder="Promotion">
                    </div>
                </div>
                <input type="hidden" name="pilote_id" value="{{ pilote.id_user }}">
                <button type="submit" class="bouton-ajouter">Modifier le pilote</button>
            </form>
            
            {# Formulaire pour supprimer le pilote #}
            <form method="POST" action="/modifier_pilote.php?id={{ pilote.id_user }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce pilote ?');">
                <input type="hidden" name="_method" value="DELETE"> <!-- Indique que c'est une suppression -->
                <input type="hidden" name="pilote_id" value="{{ pilote.id_user }}">
                <button type="submit" class="bouton-supprimer">Supprimer le pilote</button>
            </form>
        </main>
        {# Inclure le footer réutilisable #}
        {% include 'partials/footer.html.twig' %}
    </body>
</html>