{# filepath: templates/modifier_pilote.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Modifier pilote</title>
        <link rel="stylesheet" href="src/Profil-etudiant.css">
        <link rel="stylesheet" href="src/header-footer.css">
    </head>
    <body>
        {# Inclure le header réutilisable #}
        {% include 'partials/header.html.twig' %}

        <main>
            <h2>Modifier un pilote</h2>
            <section class="contenu">
                <div class="info-section">
                    <h4>Nom du pilote</h4>
                    <p>{{ pilote.nom }}</p>
                    <input type="text" placeholder="Modifier le nom">
                    
                    <h4>Prénom du pilote</h4>
                    <p>{{ pilote.prenom }}</p>
                    <input type="text" placeholder="Modifier le prénom">
                    
                    <h4>Etablissement</h4>
                    <p>{{ pilote.etablissement }}</p>
                    <input type="text" placeholder="Modifier l'établissement">
                    
                    <h4>Email</h4>
                    <p>{{ pilote.email }}</p>
                    <input type="text" placeholder="Modifier le mail">
                    
                    <h4>Promotion</h4>
                    <input type="text" placeholder="Modifier les promotions">
                    
                    <button class="bouton">Modifier le pilote</button>
                </div>
            </section>
        </main>

        {# Inclure le footer réutilisable #}
        {% include 'partials/footer.html.twig' %}
    </body>
</html>