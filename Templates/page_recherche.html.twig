{# filepath: templates/page_recherche.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Recherche offre</title>
        <link rel="stylesheet" href="src/header-footer.css">
        <link rel="stylesheet" href="src/Page-gestion.css">
    </head>
    <body>
        {# Inclure le header réutilisable #}
        {% include 'partials/header.html.twig' %}

        <main>
            <section class="candidatures">
                <div class="candidats-header-content">
                    <select id="filter-select" class="trier-recherche">
                        <option value="default">Trier ▼</option>
                        <option value="nom">Nom</option>
                        <option value="price-desc">Salaire</option>
                        <option value="location">Localisation</option>
                    </select>
                </div>
                <div class="candidatures-publiées">
                {% if noResultsMessage %}
                    <p>{{ noResultsMessage }}</p>
                {% else %}
                    {% for offer in offers %}
                        <a href="/offre_emploi.php?id={{ offer.id }}" class="candidature-item-link">
                            <div class="candidature-item">
                                <div>
                                    <h4>{{ offer.title|default('Non spécifié') }}</h4>
                                    <p>📄 {{ offer.description|default('Non spécifié') }}</p>
                                    <p>📅 Début : {{ offer.startDate|default('Non spécifié') }}</p>
                                    <p>📅 Fin : {{ offer.endDate|default('Non spécifié') }}</p>
                                    <p>🏢 {{ offer.company|default('Non spécifié') }}</p>
                                    <p>💼 {{ offer.contractType|default('Non spécifié') }}</p>
                                    <p>💰 {{ offer.salary|default('Non spécifié') }}</p>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                {% endif %}
                </div>
            </section>
        </main>

        {# Inclure le footer réutilisable #}
        {% include 'partials/footer.html.twig' %}
        <script src="search-entreprise.js"></script>
    </body>
</html>