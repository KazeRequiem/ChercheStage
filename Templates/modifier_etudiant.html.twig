{# filepath: templates/modifier_etudiant.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Modifier étudiant</title>
        <link rel="stylesheet" href="src/ajouter-entreprise.css">
        <link rel="stylesheet" href="src/header-footer.css">
    </head>
    <body>
        {# Inclure le header réutilisable #}
        {% include 'partials/header.html.twig' %}
        <main>
            <h2>Modifier un étudiant</h2>
            
            
            {# Afficher les messages d'erreur si présents #}
            {% if app.request.query.get('error') is defined and app.request.query.get('error') is not empty %}
                <div class="alert alert-danger">
                    {{ app.request.query.get('error') }}
                </div>
            {% endif %}
            
            <form class="formulaire-ajout" method="POST" action="/modifier_etudiant.php?id={{ etudiant.id_user }}">
                <div class="form-group">
                    <label for="prenom">Prénom:</label>
                    <input type="text" id="prenom" name="prenom" value="{{ etudiant.prenom }}">
                </div>
                
                <div class="form-group">
                    <label for="nom">Nom:</label>
                    <input type="text" id="nom" name="nom" value="{{ etudiant.nom }}">
                </div>
                
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="{{ etudiant.email }}">
                </div>
                
                <div class="form-group">
                    <label for="telephone">Téléphone:</label>
                    <input type="text" id="telephone" name="telephone" value="{{ etudiant.telephone }}">
                </div>
                
                <div class="form-group">
                    <label for="datenaissance">Date de naissance:</label>
                    <input type="date" id="datenaissance" name="datenaissance" value="{{ etudiant.datenaissance }}">
                </div>
                
                <div class="form-group">
                    <label for="promotion">Promotion:</label>
                    <input type="text" id="promotion" name="promotion" value="{{ etudiant.promotion }}">
                </div>
                
                <input type="hidden" name="etudiant_id" value="{{ etudiant.id_user }}">
                <button type="submit" class="btn-submit">Modifier</button>
            </form>
            
            <form method="POST" action="/modifier_etudiant.php?id={{ etudiant.id_user }}" class="delete-form" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet étudiant ?');">
                <input type="hidden" name="_method" value="DELETE"> <!-- Indique que c'est une suppression -->
                <input type="hidden" name="etudiant_id" value="{{ etudiant.id_user }}">
                <button type="submit" class="bouton-supprimer">Supprimer</button>
            </form>
        </main>
        {# Inclure le footer réutilisable #}
        {% include 'partials/footer.html.twig' %}
    </body>
</html>