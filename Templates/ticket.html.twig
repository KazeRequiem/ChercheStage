{# filepath: templates/ticket.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Gestion Tickets</title>
        <link rel="stylesheet" href="src/Gestion-tickets.css">
        <link rel="stylesheet" href="src/header-footer.css">
    </head>
    <body>
        {# Inclure le header réutilisable #}
        {% include 'partials/header.html.twig' %}

        <main>
            <section class="tickets">
                <h2>Gestion des Tickets</h2>
                <table class="tickets-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Date de création</th>
                            <th>État</th>
                            <th>Description</th>
                            <th>ID Utilisateur</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if noResultsMessage %}
                            <tr>
                                <td colspan="6">{{ noResultsMessage }}</td>
                            </tr>
                        {% else %}
                            {% for ticket in tickets %}
                                <tr>
                                    <td>{{ ticket.id_ticket }}</td>
                                    <td>{{ ticket.titre }}</td>
                                    <td>{{ ticket.date_creation }}</td>
                                    <td class="etat">{{ ticket.etat }}</td>
                                    <td>{{ ticket.description }}</td>
                                    <td>{{ ticket.id_user }}</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </section>
        </main>

        {# Inclure le footer réutilisable #}
        {% include 'partials/footer.html.twig' %}
        <script src="Gestion-tickets.js"></script>
    </body>
</html>