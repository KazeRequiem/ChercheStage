{# filepath: templates/partials/candidature_card.html.twig #}
<div class="candidature-item" data-offre-id="{{ candidature.id }}">
    <div>
        <h1>{{ candidature.title }}</h1>
        <p>📍 {{ candidature.location }}</p>
        {% if candidature.date %}
            <p>📅 {{ candidature.date }}</p>
        {% endif %}
        {% if candidature.contractType %}
            <p>📄 {{ candidature.contractType }}</p>
        {% endif %}
        {% if candidature.salary %}
            <p>💰 {{ candidature.salary }}</p>
        {% endif %}
        {% if candidature.remote %}
            <p>🏠 {{ candidature.remote }}</p>
        {% endif %}
        {% if candidature.position %}
            <p>💻 {{ candidature.position }}</p>
        {% endif %}
    </div>
    <div class="candidature-actions">
        {% if candidature.status %}
            <span class="statut {{ candidature.statusClass }}">{{ candidature.status }}</span>
        {% endif %}
        {% if candidature.viewLink %}
            <button class="voir-candidature">Voir ma candidature</button>
        {% endif %}
        <form method="POST" action="/candidatures_favoris.php" style="display: inline;">
            <button type="submit" class="supprimer">Supprimer</button>
        </form>
            <input type="hidden" name="candidature_id" value="{{ candidature.id }}">
        {% if candidature.logo %}
            <img src="assets/{{ candidature.logo }}" alt="{{ candidature.title }} Logo" class="company-logo">
        {% endif %}
    </div>
</div>