{# filepath: templates/partials/entreprise_card.html.twig #}
<a href="{{ entreprise.link }}">
    <div class="candidature-item">
        <div>
            <h4>{{ entreprise.name }}</h4>
            <p>📧 Email : {{ entreprise.email }}</p>
            {% if entreprise.rating != 'N/A' %}
                <p>⭐ Note : {{ entreprise.rating }}/5</p>
            {% endif %}
            <p>☎️ Téléphone : {{ entreprise.phone }}</p>
            <p>👨‍🎓 {{ entreprise.candidates }} candidats ont déjà postulé</p>
            <p>📍 Localisation : {{ entreprise.location }}</p>
        </div>
        <div class="candidature-actions">
            {% if entreprise.logo %}
                <img src="{{ entreprise.logo }}" alt="{{ entreprise.name }} Logo" class="company-logo">
            {% endif %}
        </div>
    </div>
</a>