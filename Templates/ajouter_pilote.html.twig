{# filepath: templates/ajouter_pilote.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Ajouter un pilote</title>
        <link rel="stylesheet" href="src/ajouter-entreprise.css">
        <link rel="stylesheet" href="src/header-footer.css">
    </head>
    <body>
        {# Inclure le header réutilisable #}
        {% include 'partials/header.html.twig' %}

        <main>
            <h2>Ajouter un pilote</h2>

            {# Afficher un message d'erreur si défini #}
            {% if error is defined %}
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            {% endif %}

            <form class="formulaire-ajout" method="POST" action="/ajouter_pilote.php">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="prenom">Prénom du pilote</label>
                        <input type="text" id="prenom" name="prenom" value="{{ formData.prenom ?? '' }}" placeholder="Prénom du pilote" required>
                    </div>
                    <div class="form-group">
                        <label for="nom">Nom du pilote</label>
                        <input type="text" id="nom" name="nom" value="{{ formData.nom ?? '' }}" placeholder="Nom du pilote" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="{{ formData.email ?? '' }}" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="motdepasse">Mot de passe</label>
                        <input type="password" id="motdepasse" name="motdepasse" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group">
                        <label for="telephone">Téléphone</label>
                        <input type="text" id="telephone" name="telephone" value="{{ formData.telephone ?? '' }}" placeholder="Téléphone" required>
                    </div>
                    <div class="form-group">
                        <label for="datenaissance">Date de naissance</label>
                        <input type="date" id="datenaissance" name="datenaissance" value="{{ formData.datenaissance ?? '' }}" placeholder="Date de naissance" required>
                    </div>
                    <div class="form-group">
                        <label for="promotion">Promotion</label>
                        <input type="number" id="promotion" name="promotion" value="{{ formData.promotion|default('') }}" placeholder="ID de la promotion" required>
                    </div>
                </div>
                <button type="submit" class="bouton-ajouter">Ajouter le pilote</button>
            </form>
        </main>

        {# Inclure le footer réutilisable #}
        {% include 'partials/footer.html.twig' %}
    </body>
</html>