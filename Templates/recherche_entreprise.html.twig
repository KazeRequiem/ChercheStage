{# filepath: templates/recherche_entreprise.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Entreprises</title>
    <link rel="stylesheet" href="src/header-footer.css">
    <link rel="stylesheet" href="src/Page-gestion.css">
</head>
<body>
    {% include 'partials/header.html.twig' %}

    <main>
        <section class="candidatures">
            <section>
                <div class="candidats-header-content">
                    <h2>Liste des entreprises</h2>
                    <div class="candidats-header-actions">
                        <form method="GET" action="/recherche_entreprise.php">
                            <div class="search-bar">
                                <input type="text" name="search" id="search" placeholder="Rechercher une entreprise" value="{{ search|default('') }}">
                                <button type="submit" class="search-icon">🔍</button>
                            </div>
                        </form>
                        <select id="filter-select" class="trier-button">
                            <option value="default">Trier ▼</option>
                            <option value="nom">Nom</option>
                            <option value="location">Localisation</option>
                        </select>
                    </div>
                </div>
                </section>  
            <div class="candidatures-publiées">
                {% if noResultsMessage %}
                    <p>{{ noResultsMessage }}</p>
                {% else %}
                    {% for entreprise in entreprises %}
                        <a href="{{ entreprise.link }}">
    <div class="candidature-item">
        <div>
            <h4>{{ entreprise.name }}</h4>
            <p>📧 {{ entreprise.email }}</p>
            <p>⭐ {{ entreprise.rating }}/5</p>
            <p>☎️ {{ entreprise.phone }}</p>
            <p>👨‍🎓 {{ entreprise.candidates }} candidats ont déjà postulé</p>
            <p>📍 {{ entreprise.location }}</p>
        </div>
        <div class="candidature-actions">
            <img src="{{ entreprise.logo }}" alt="{{ entreprise.name }} Logo" class="company-logo">
        </div>
    </div>
</a>
                    {% endfor %}
                {% endif %}
            </div>
        </section>
    </main>

    {% include 'partials/footer.html.twig' %}
</body>
</html>