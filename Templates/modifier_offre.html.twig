{# filepath: templates/modifier_pilote.html.twig #}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Modifier offre</title>
        <link rel="stylesheet" href="src/ajouter-entreprise.css">
        <link rel="stylesheet" href="src/header-footer.css">
    </head>
    <body>
        {# Inclure le header réutilisable #}
        {% include 'partials/header.html.twig' %}
        <main>
        <h2>Modifier une offre</h2>
        <form class="formulaire-ajout" method="POST" action="/gestion_offre.php">
            <div class="form-grid">
                <div class="form-group">
                    <label for="nom">Nom de l'offre : {{ offer.title }}</label>
                    <input type="text" id="nom" name="nom" placeholder="Nom de l'offre" required>
                </div>
                <div class="form-group">
                    <label for="email">Entreprise : {{ offer.company }}</label>
                    <input type="text" id="email" name="email" placeholder="Entreprise" required>
                </div>
                <div class="form-group">
                    <label for="email">Salaire : {{ offer.salary }}</label>
                    <input type="text" id="email" name="email" placeholder="Salaire" required>
                </div>
                <div class="form-group">
                    <label for="telephone">Téléphone : {{offer.number}}</label>
                    <input type="text" id="telephone" name="telephone" placeholder="Téléphone" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" placeholder="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="ville">Ville : {{offer.location}}</label>
                    <input type="text" id="ville" name="ville" placeholder="Ville" required>
                </div>
                <div class="form-group">
                    <label for="telephone">Date de début : {{offer.startDate}}</label>
                    <input type="date" id="telephone" name="telephone"required>
                </div>
                <div class="form-group">
                    <label for="description">Date de fin : {{offer.endDate}}</label>
                    <input type="date" id="telephone" name="telephone" required>
                </div>
            </div>
            <button type="submit" class="bouton-ajouter">Modifier l'offre</button>
        </form>
        <form method="POST" action="/gestion_offre.php" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?');">
            <input type="hidden" name="offer_id" value="{{ offer.id }}">
            <button type="submit" class="bouton-supprimer">Supprimer l'offre</button>
        </form>
        </main>
        {# Inclure le footer réutilisable #}
        {% include 'partials/footer.html.twig' %}
    </body>
</html>