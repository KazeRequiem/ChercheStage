{# filepath: templates/postuler.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Postuler à une offre</title>
  <link rel="stylesheet" href="src/style.css">
  <link rel="stylesheet" href="src/header-footer.css">
</head>
<body>
    {% include 'partials/header.html.twig' %}

    <main>
        <section class="contenu">
            <div class="titre">
                <h4>{{ offer.title }}</h4>
                <p>Postuler à cette offre</p>
            </div>
        
            <form action="/recherche_entreprise.php" method="POST" enctype="multipart/form-data">
                <div class="identity">
                    <label for="votre-nom">
                        Nom<br>
                        <input type="text" name="votre-nom" id="votre-nom" placeholder="Votre nom" required><br>
                    </label>
                    <label for="votre-prenom">
                        Prénom<br>
                        <input type="text" name="votre-prenom" id="votre-prenom" placeholder="Votre prénom" required><br>
                    </label>
                </div>
                <div class="formulaire">
                    <label for="votre-email">
                        Email<br>
                        <input type="email" name="votre-email" id="votre-email" placeholder="Votre email" required><br>
                    </label>
                    <label for="votre-numero">
                        Numéro de téléphone<br>
                        <input type="text" name="votre-numero" id="votre-numero" placeholder="Votre numéro" required><br>
                    </label>
                    <label for="votre-linkedin">
                        Lien Profil Linkedin (optionnel)<br>
                        <input type="text" name="votre-linkedin" id="votre-linkedin" placeholder="Votre lien Linkedin"><br>
                    </label>
        
                    <div class="upload-zone">
                        <label class="upload-box">
                            <input type="file" name="votre-CV" id="votre-CV" accept=".pdf, .docx, .png, .jpg" hidden required><br>
                            <img src="assets/upload-icon.png" alt="upload" width="40">
                            <p>Importer un CV</p>
                            <small>Format autorisé : .pdf, .docx, .png, .jpg</small><br>
                            <small>Taille maximale : 5 Mo</small>
                        </label>
        
                        <label class="upload-box">
                            <input type="file" name="votre-lettre" id="votre-lettre" accept=".pdf, .docx, .png, .jpg" hidden required><br>
                            <img src="assets/upload-icon.png" alt="upload" width="40">
                            <p>Importer une lettre de motivation</p>
                            <small>Format autorisé : .pdf, .docx, .png, .jpg</small><br>
                            <small>Taille maximale : 5 Mo</small>
                        </label>
                    </div>
                </div>
                <label>
                    <p><input type="checkbox" name="conditions" required> J'ai lu et j'accepte les conditions d'utilisation</p>
                </label>
                <center><input type="submit" value="Envoyer ma candidature"></center> 
            </form>
        </section>
    </main>

    {% include 'partials/footer.html.twig' %}
</body>
</html>